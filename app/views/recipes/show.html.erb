<div class="container text-center">
  <div class="content-with-picture">
    <div class="photo">
      <%#= image_tag(@recipe.photo_url)%>
      <img src= <%= @recipe.photo_url %>, width="470", height="250"></img>
    </div>
    <div class="content">
      <div class="title mb-4">
        <h1><%= @recipe.name %></h1>
      </div>
      <div class="properties">
        <i class="fas fa-clock"></i>
        <%=@recipe.prep_time %>
      </div>
      <div class="ingredients ml-5">
        <div class="row mb-2">
          <h4>Ingredients</h4>
        </div>
        <div class="row">
          <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
            <br>
              <div class="col-3 text-right">
                <p><%= recipe_ingredient.quantity %> <%= recipe_ingredient.unit %></p>
              </div>
              <div class="col-9 text-left">
                <p><%= recipe_ingredient.ingredient.name %></p>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div id="button-back">
    <%= link_to "Back to recipes", authenticated_root_path %>
  </div>
</div>
